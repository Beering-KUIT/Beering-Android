<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#F4F4F4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mandatory_terms_iv"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_requirement_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비어링 서비스 이용약관"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="@id/mandatory_terms_iv"
        app:layout_constraintStart_toEndOf="@id/mandatory_terms_iv"
        />

    <ImageView
        android:id="@+id/terms_button_cancel_bt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/button_cancel"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mandatory_terms_iv"
        app:layout_constraintBottom_toBottomOf="@id/mandatory_terms_iv"/>

    <TextView
        android:id="@+id/mandatory_term1_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="14sp"
        android:singleLine="false"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/mandatory_terms_iv"
        />

    <TextView
        android:id="@+id/mandatory_term1_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="zzzzzz\nbkjbjbjk\n12314214"
        android:textSize="13sp"
        android:singleLine="false"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/mandatory_term1_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>