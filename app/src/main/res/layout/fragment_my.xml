<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/my_profile_img_mcv"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="72dp">

        <ImageView
            android:id="@+id/my_profile_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_default_profile"/>
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/my_profile_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_img_mcv"
        android:text="맥믈리에"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>


    <TextView
        android:id="@+id/my_profile_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_nickname_tv"
        android:text="beering@gmail.com"
        android:textSize="16dp"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/my_setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/gray01"
        android:text="설정"
        android:textSize="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="337dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_my_reviews_cl"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/my_setting_tv"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/my_my_reviews_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="내 리뷰 모아보기"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/my_my_reviews_button_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/button_arrow_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp"/>

        <View
            android:id="@+id/my_my_reviews_underline_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_favorite_drink_cl"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/my_my_reviews_cl"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/my_favorite_drink_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="찜한 주류 모아보기"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/my_favorite_drink_button_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/button_arrow_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp"/>

        <View
            android:id="@+id/my_favorite_drink_underline_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_terms_cl"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/my_favorite_drink_cl"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/my_terms_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="이용약관"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/my_terms_button_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/button_arrow_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_version_cl"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/my_terms_cl"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/my_version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="버전 정보"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/my_version_button_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/button_arrow_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_language_cl"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/my_version_cl"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/my_language_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="언어설정"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/my_language_en_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/my_language_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Language"
            android:textSize="12dp"
            android:layout_marginStart="4dp"/>

        <ImageView
            android:id="@+id/my_language_button_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/button_arrow_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>