<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:layout_height="wrap_content"
    android:paddingVertical="25dp"
    android:paddingHorizontal="15dp"
    android:background="@color/gray00"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mandatory_terms_iv"
        android:layout_width="28dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_requirement_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/terms_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비어링 서비스 이용약관"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/mandatory_terms_iv"
        app:layout_constraintBottom_toBottomOf="@id/mandatory_terms_iv"
        app:layout_constraintStart_toEndOf="@id/mandatory_terms_iv"
        />

    <ImageView
        android:id="@+id/terms_button_cancel_bt"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/button_cancel"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toEndOf="@id/terms_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mandatory_terms_iv"
        app:layout_constraintBottom_toBottomOf="@id/mandatory_terms_iv"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="108dp" >

        <TextView
            android:id="@+id/mandatory_term1_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"

            />

        <TextView
            android:id="@+id/mandatory_term1_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zzzzzz\nbkjbjbjk\n12314214"
            android:gravity="left"
            android:textSize="12sp"
            android:singleLine="false"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/mandatory_term1_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>