<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.SplashActivity"
    android:background="@drawable/splash_background_image">

    <ImageView
        android:id="@+id/logo_video"
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/beering_logo_text1"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:src="@drawable/logo_beering"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/logo_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/beering_logo_text2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:src="@drawable/splash_text2"
        app:layout_constraintTop_toBottomOf="@id/beering_logo_text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>