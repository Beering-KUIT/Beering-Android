<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_drink_search_result_cl"
    android:layout_width="match_parent"
    android:layout_height="259dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_drink_search_result_img_iv"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/item_drink_search_result_title_kr_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="필스너 우르켈"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_drink_search_result_img_iv" />

    <ImageView
        android:id="@+id/item_drink_search_result_heart_off_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="11.5dp"
        android:src="@drawable/ic_heart_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_drink_search_result_title_kr_tv" />

    <ImageView
        android:id="@+id/item_drink_search_result_heart_on_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="11.5dp"
        android:src="@drawable/ic_heart_on"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_drink_search_result_title_kr_tv" />


    <TextView
        android:id="@+id/item_drink_search_result_title_en_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilsner Urquell"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@id/item_drink_search_result_title_kr_tv"
        app:layout_constraintTop_toBottomOf="@id/item_drink_search_result_title_kr_tv" />

    <TextView
        android:id="@+id/item_drink_search_result_manufacture_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilsner Urquell Brewery"
        android:textColor="@color/gray"
        android:textSize="8dp"
        app:layout_constraintStart_toStartOf="@id/item_drink_search_result_title_kr_tv"
        app:layout_constraintTop_toBottomOf="@id/item_drink_search_result_title_en_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>