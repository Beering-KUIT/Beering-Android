<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_drink_search_result_cl"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="@color/white">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_drink_search_result_img_mcv"
        android:layout_width="60dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_drink_search_result_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray2"
            android:src="@drawable/ic_launcher_foreground" />
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/item_drink_search_result_manufacture_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilsner Urquell Brewery"
        android:textColor="@color/black"
        android:textSize="11dp"
        app:layout_constraintTop_toTopOf="@id/item_drink_search_result_img_mcv"
        app:layout_constraintStart_toEndOf="@id/item_drink_search_result_img_mcv"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/item_drink_search_result_title_kr_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필스너 우르켈"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@id/item_drink_search_result_title_en_tv"
        app:layout_constraintStart_toEndOf="@id/item_drink_search_result_img_mcv"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/item_drink_search_result_title_en_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilsner Urquell"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@id/item_drink_search_result_img_mcv"
        app:layout_constraintStart_toEndOf="@id/item_drink_search_result_img_mcv"
        android:layout_marginStart="12dp"/>
    
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_drink_search_result_img_mcv"
        android:background="@color/gray2"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>