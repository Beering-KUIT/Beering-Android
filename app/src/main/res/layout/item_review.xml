<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_review_cl"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="5dp"
    android:layout_height="190dp"
    android:background="@color/gray00"
    android:padding="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_review_profile_cv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/item_review_profile_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@color/gray2"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/item_review_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 1주 전"
        android:textColor="@color/gray01"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/item_review_profile_cv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/item_review_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맥믈리에"
        android:textColor="@color/beering_black"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        app:layout_constraintStart_toEndOf="@id/item_review_profile_cv"
        app:layout_constraintTop_toBottomOf="@id/item_review_date_tv"
        android:layout_marginStart="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/item_review_profile_cv"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp">

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/star_off">

            <ImageView
                android:id="@+id/review_star1_half_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/star_half_on"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/review_star1_full_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/star_off">

            <ImageView
                android:id="@+id/review_star2_half_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/star_half_on"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/review_star2_full_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/star_off">

            <ImageView
                android:id="@+id/review_star3_half_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/star_half_on"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/review_star3_full_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/star_off">

            <ImageView
                android:id="@+id/review_star4_half_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/star_half_on"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/review_star4_full_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/star_off">

            <ImageView
                android:id="@+id/review_star5_half_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/star_half_on"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/review_star5_full_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
        </FrameLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/drink_detail_review_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="Lorem ipsum dolor sit amet consectetur.
Vestibulum scelerisque amet morbi molestie molestie arcu dignissim. Habitant ornare etiam sollicitudin risus sit faucibus asdfaffdsdkfhlkhsdkhfkhnoewinnvjfhoirenjfvbjibknodfhojsndf"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_review_profile_cv"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>